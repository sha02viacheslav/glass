{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "isolatedModules": true,
    "downlevelIteration": true,
    "lib": ["dom", "esnext"],
    "typeRoots": ["./src/assets", "./node_modules/@types"],
    "moduleResolution": "node",
    "noEmit": true,
    "module": "es2020",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "jsxImportSource": "@emotion/react",
    "baseUrl": ".",
    "paths": {
      "@glass/assets/*": ["./src/assets/*"],
      "@glass/components/*": ["src/components/*"],
      "@glass/constants": ["src/core/constants"],
      "@glass/enums": ["src/core/enums"],
      "@glass/envs": ["src/core/envs"],
      "@glass/hooks/*": ["src/core/hooks/*"],
      "@glass/models": ["src/core/models"],
      "@glass/pages/*": ["src/pages/*"],
      "@glass/services": ["src/core/services"],
      "@glass/services/*": ["src/core/services/*"],
      "@glass/styles/*": ["src/styles/*"],
      "@glass/utils/*": ["src/core/utils/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": [".eslintrc.js", "./**/*"]
}
